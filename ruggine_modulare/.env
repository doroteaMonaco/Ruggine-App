# Configurazione ambiente per ruggine_modulare
# Rinominare questo file in .env e personalizzare i valori se necessario

# Database
DATABASE_URL=sqlite:data/ruggine_modulare.db

# Configurazioni SQLite
SQLITE_SYNCHRONOUS=NORMAL
SQLITE_JOURNAL_MODE=WAL
SQLITE_CACHE_SIZE=10000

# Configurazioni di Rete
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
MAX_CLIENTS=100
ENABLE_ENCRYPTION=true

# Configurazioni Client
CLIENT_DEFAULT_HOST=127.0.0.1
CLIENT_DEFAULT_PORT=5000
# CLIENT_PUBLIC_HOST: Indirizzo pubblico per connessioni remote
CLIENT_PUBLIC_HOST=0.0.0.0

# Sicurezza
SESSION_EXPIRY_DAYS=7
ARGON2_SALT_LENGTH=16

# Logging
LOG_LEVEL=info

# Cleanup automatico
CLEANUP_DAYS=30
PERFORMANCE_METRICS_RETENTION_DAYS=7

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# GUI
GUI_THEME=default
MAX_MESSAGE_LENGTH=2048

# Altre opzioni estendibili
# ...aggiungi qui altre variabili se necessario...
