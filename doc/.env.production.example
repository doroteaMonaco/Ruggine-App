# Example .env.production for Ruggine server
# Network
SERVER_HOST=0.0.0.0
SERVER_PORT=5000

# Database: use sqlite for single-node POC or postgres for production
# For sqlite (file will be created relative to app working dir):
# DATABASE_URL=sqlite:data/ruggine_modulare.db
# For Postgres (recommended for production):
DATABASE_URL=postgres://ruggine:password@postgres:5432/ruggine_db

# TLS / Encryption
ENABLE_ENCRYPTION=true
# Paths inside the container or host where cert and key are mounted
TLS_CERT_PATH=/app/certs/cert.pem
TLS_KEY_PATH=/app/certs/key.pem

# Server behaviour
MAX_CLIENTS=500
SESSION_EXPIRY_DAYS=7
ARGO N2_SALT_LENGTH=16

# Logging
LOG_LEVEL=info

# Optional: disable client-side file fallback for session storage (client change required)
# KEYRING_FALLBACK=false
